{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 bg-white p-4 rounded shadow"> <!-- Added bg-white -->
                <h1 class="text-center mb-4">Inscription</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class="mb-4">
                        <legend class="h4 mb-3 text-primary">Mon identité</legend>
                        {{ form_row(registrationForm.lastname, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.firstname, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="h4 mb-3 text-primary">Mes coordonnées</legend>
                        {{ form_row(registrationForm.address, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.zipcode, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.city, {
                            'attr': {'class': 'form-control mb-3'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </fieldset>

                    {{ form_row(registrationForm.plainPassword, {
                        'attr': {'class': 'form-control mb-3'},
                        'label_attr': {'class': 'form-label'},
                        'label': 'Mot de passe'
                    }) }}

                    {{ form_row(registrationForm.RGPDConsent, {
                        'label_attr': {'class': 'form-check-label'},
                        'attr': {'class': 'form-check-input'}
                    }) }}

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">M'inscrire</button>
                        <a href="{{ path('app_login') }}" class="btn btn-secondary btn-lg">Me connecter</a>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}